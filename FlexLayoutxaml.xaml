<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.FlexLayoutxaml"
             Title="FlexLayoutxaml">
    <FlexLayout  Direction="Column">
        <Label Text="header" HorizontalTextAlignment="Center" Background="Aqua"/>
        <FlexLayout FlexLayout.Grow="1">
            <Label Text="Content" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" 
                   FlexLayout.Grow="1"  BackgroundColor="Green"/>
            <BoxView FlexLayout.Basis="50" FlexLayout.Order="-1" Color="Red" />
            <BoxView FlexLayout.Basis="50"  Color="Orange" />
            


        </FlexLayout>

        <Label Text="footer" HorizontalTextAlignment="Center" BackgroundColor="grey" />

    </FlexLayout>
</ContentPage>