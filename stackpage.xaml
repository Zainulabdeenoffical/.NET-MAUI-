<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.stackpage"
             Title="stackpage">
    <StackLayout Spacing="20">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Start" 
            HorizontalOptions="End" BackgroundColor="Aqua" />
        <Label 
    Text="Welcome to .NET MAUI!"
    VerticalOptions="Center" 
    HorizontalOptions="Center" BackgroundColor="Red"/>
        <Label 
    Text="Welcome to .NET MAUI!"
    VerticalOptions="Center" 
    HorizontalOptions="FillAndExpand"  Background="Green"/>
        <Label 
    Text="Welcome to .NET MAUI!"
    VerticalOptions="FillAndExpand" 
    HorizontalOptions="Center" BackgroundColor="Yellow" />
    </StackLayout>
</ContentPage>